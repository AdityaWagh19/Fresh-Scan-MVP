# ============================================
# Smart Fridge with Blinkit Integration
# ============================================

# Blinkit Settings
BLINKIT_HEADLESS=false
BLINKIT_TIMEOUT=60000

# ============================================
# Database Configuration
# ============================================
MONGO_URI=mongodb://localhost:27017/
DATABASE_NAME=SmartKitchen

# ============================================
# Smart Fridge Core Settings
# ============================================
AUTO_MONITORING_INTERVAL=60
ENABLE_SCHEDULER=true
LOW_STOCK_THRESHOLD=0.3

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/smart_fridge.log

# ============================================
# JWT & Authentication Core
# ============================================
JWT_SECRET_KEY=YOUR_JWT_SECRET_KEY_HERE
JWT_ACCESS_TOKEN_EXPIRY=900
JWT_REFRESH_TOKEN_EXPIRY=2592000
JWT_RESET_TOKEN_EXPIRY=3600

# Password & Account Security
BCRYPT_COST_FACTOR=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800

# Rate Limiting
RATE_LIMIT_LOGIN=5
RATE_LIMIT_PASSWORD_RESET=3
RATE_LIMIT_TOKEN_REFRESH=10

# ============================================
# Google OAuth 2.0 Configuration
# ============================================
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# ============================================
# Feature Flags
# ============================================
ENABLE_GOOGLE_OAUTH=true
ENABLE_EMAIL_AUTH=true
REQUIRE_EMAIL_VERIFICATION=false

# Cloudflare Camera Service Configuration
CLOUDFLARE_DOMAIN=camera.freshscan.co.in
CAMERA_API_KEY=YOUR_CAMERA_API_KEY_HERE

# Optional: Camera service settings
CAMERA_TIMEOUT=30
CAMERA_MAX_RETRIES=3
